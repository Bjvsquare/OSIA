{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://yourdomain/schemas/evidence_event.schema.json",
    "title": "EvidenceEvent",
    "type": "object",
    "required": [
        "event_id",
        "user_id",
        "type",
        "source",
        "signals",
        "timestamp"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "minLength": 8
        },
        "user_id": {
            "type": "string",
            "minLength": 6
        },
        "type": {
            "type": "string",
            "enum": [
                "BLUEPRINT_RESPONSE",
                "CARD_RATING",
                "CHOICE",
                "EDIT",
                "BEHAVIORAL"
            ]
        },
        "source": {
            "type": "string",
            "minLength": 3
        },
        "signals": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "trait_id",
                    "delta",
                    "reliability"
                ],
                "properties": {
                    "trait_id": {
                        "type": "string"
                    },
                    "delta": {
                        "type": "number",
                        "minimum": -25,
                        "maximum": 25
                    },
                    "reliability": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    }
                },
                "additionalProperties": false
            }
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "raw": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}