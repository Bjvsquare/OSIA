{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://yourdomain/schemas/origin_seed_input.schema.json",
    "title": "OriginSeedInput",
    "type": "object",
    "required": [
        "dob",
        "birthplace",
        "birth_time"
    ],
    "properties": {
        "dob": {
            "type": "string",
            "format": "date"
        },
        "birthplace": {
            "type": "object",
            "required": [
                "label",
                "lat",
                "lon"
            ],
            "properties": {
                "label": {
                    "type": "string",
                    "minLength": 2
                },
                "lat": {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "lon": {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                }
            },
            "additionalProperties": false
        },
        "birth_time": {
            "type": "object",
            "required": [
                "mode"
            ],
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": [
                        "EXACT",
                        "WINDOW",
                        "UNKNOWN"
                    ]
                },
                "time": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$"
                },
                "window": {
                    "type": [
                        "object",
                        "null"
                    ],
                    "required": [
                        "start",
                        "end"
                    ],
                    "properties": {
                        "start": {
                            "type": "string",
                            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$"
                        },
                        "end": {
                            "type": "string",
                            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "mode": {
                                "const": "EXACT"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "time"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "mode": {
                                "const": "WINDOW"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "window"
                        ]
                    }
                }
            ],
            "additionalProperties": false
        },
        "metadata": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string"
                },
                "user_timezone_hint": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}